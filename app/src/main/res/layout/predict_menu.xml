<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_marginTop="10dp"
        android:layout_width="383dp"
        android:layout_height="40dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:text="PREDIKSI IPK"
            android:textSize="20dp"
            android:textColor="#FFF"
            android:textStyle="bold"
            android:background="@drawable/finaltable"
            android:textAlignment="center"/>
    </RelativeLayout>

    <TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/ipkPredictTable"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal|center"
        android:orientation="vertical"
        android:stretchColumns="1">

        <TableRow
            android:background="@drawable/mainmenu">

            <TextView
                android:layout_column="1"
                android:text="Semester 1"
                android:padding="3dip"
                android:textSize="15dp"
                android:layout_marginLeft="20dp"
                android:textStyle="bold"/>

            <TextView
                android:text="19 SKS"
                android:layout_column="2"
                android:padding="3dip"
                android:textSize="15dp"
                android:layout_marginRight="40dp"/>

            <TextView
                android:text="3,67"
                android:layout_column="2"
                android:padding="3dip"
                android:textSize="15dp"
                android:layout_marginRight="40dp"/>

            <TextView
                android:text="A"
                android:layout_column="3"
                android:padding="3dip"
                android:textSize="15dp"
                android:layout_marginRight="20dp"/>
        </TableRow>

        <TableRow
            android:background="#FFF">

            <TextView
                android:layout_column="1"
                android:text="Semester 2"
                android:padding="3dip"
                android:textSize="15dp"
                android:layout_marginLeft="20dp"
                android:textStyle="bold"/>

            <TextView
                android:text="22 SKS"
                android:layout_column="2"
                android:padding="3dip"
                android:textSize="15dp"
                android:layout_marginRight="40dp"/>

            <TextView
                android:text="3,33"
                android:layout_column="2"
                android:padding="3dip"
                android:textSize="15dp"
                android:layout_marginRight="40dp"/>

            <TextView
                android:text="B+"
                android:layout_column="3"
                android:padding="3dip"
                android:textSize="15dp"
                android:layout_marginRight="20dp"/>
        </TableRow>

        <TableRow
            android:background="@drawable/mainmenu">

            <TextView
                android:layout_column="1"
                android:text="Semester 3"
                android:padding="3dip"
                android:textSize="15dp"
                android:layout_marginLeft="20dp"
                android:textStyle="bold"/>

            <TextView
                android:text="20 SKS"
                android:layout_column="2"
                android:padding="3dip"
                android:textSize="15dp"
                android:layout_marginRight="40dp"/>

            <TextView
                android:text="3,00"
                android:layout_column="2"
                android:padding="3dip"
                android:textSize="15dp"
                android:layout_marginRight="40dp"/>

            <TextView
                android:text="B"
                android:layout_column="3"
                android:padding="3dip"
                android:textSize="15dp"
                android:layout_marginRight="20dp"/>
        </TableRow>

        <TableRow
            android:background="#FFF">

            <TextView
                android:layout_column="1"
                android:text="Semester 4"
                android:padding="3dip"
                android:textSize="15dp"
                android:layout_marginLeft="20dp"
                android:textStyle="bold"/>

            <android.support.design.widget.TextInputEditText
                android:text=""
                android:layout_column="2"
                android:padding="3dip"
                android:textSize="15dp"
                android:layout_marginRight="40dp"/>

            <android.support.design.widget.TextInputEditText
                android:text=""
                android:layout_column="2"
                android:padding="3dip"
                android:textSize="15dp"
                android:layout_marginRight="40dp"/>

            <android.support.design.widget.TextInputEditText
                android:text=""
                android:layout_column="3"
                android:padding="3dip"
                android:textSize="15dp"
                android:layout_marginRight="20dp"/>
        </TableRow>
    </TableLayout>


    <RelativeLayout
        android:layout_marginTop="218dp"
        android:layout_width="383dp"
        android:layout_height="40dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:text="HASIL PREDIKSI"
            android:textSize="20dp"
            android:textColor="#FFF"
            android:textStyle="bold"
            android:background="#d77575"
            android:textAlignment="center"/>
    </RelativeLayout>

    <TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/predictTable"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal|center"
        android:orientation="vertical"
        android:stretchColumns="1">

        <TableRow
            android:background="#f7e2e2">

            <TextView
                android:layout_column="1"
                android:text="IPK"
                android:textStyle="bold"
                android:padding="3dip"
                android:textSize="15dp"
                android:layout_marginLeft="20dp"/>

            <TextView
                android:text="36 SKS"
                android:layout_column="2"
                android:padding="3dip"
                android:textSize="15dp"
                android:layout_marginRight="40dp"/>

            <TextView
                android:text="3,00"
                android:layout_column="2"
                android:padding="3dip"
                android:textSize="15dp"
                android:layout_marginRight="40dp"/>

            <TextView
                android:text="B"
                android:layout_column="3"
                android:padding="3dip"
                android:textSize="15dp"
                android:layout_marginRight="20dp"/>
        </TableRow>
    </TableLayout>


    <View
        android:id="@+id/divider"
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:background="?android:attr/listDivider" />

    <android.support.design.widget.TabLayout
        android:layout_marginTop="17dp"
        android:layout_width="match_parent"
        android:layout_height="42dp"
        app:tabIndicatorColor="@color/colorPrimaryDark"
        app:tabIndicatorGravity="top"
        app:tabIndicatorHeight="3dp"
        app:tabTextColor="#FFF"
        android:background="#66CDAA">

        <android.support.design.widget.TabItem
            android:layout_width="wrap_content"
            android:layout_height="10dp"
            android:text="Beranda" />

        <android.support.design.widget.TabItem
            android:layout_width="wrap_content"
            android:layout_height="10dp"
            android:text="IPK" />

        <android.support.design.widget.TabItem
            android:layout_width="wrap_content"
            android:layout_height="10dp"
            android:text="Log Out" />
    </android.support.design.widget.TabLayout>

</LinearLayout>