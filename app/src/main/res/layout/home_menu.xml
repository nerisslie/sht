<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">


    <ImageView
        android:layout_width="384dp"
        android:layout_height="215dp"
        android:src="@drawable/maxresdefault"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="35dp">
        <TextView
            android:layout_width="200dp"
            android:layout_height="25dp"
            android:text="Welcome, Fellas !"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:textSize="18dp"
            android:textStyle="bold|italic"
            android:textColor="#88a196"/>

        <TextView
            android:layout_width="50dp"
            android:layout_height="25dp"
            android:text="Date"
            android:layout_marginLeft="320dp"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:textSize="18dp"
            android:textStyle="bold|italic"
            android:textColor="#88a196"/>

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="383dp"
        android:layout_height="210dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="25dp"
            android:text="ALERT"
            android:textSize="18dp"
            android:textColor="#FFF"
            android:textStyle="bold"
            android:background="#cd6675"
            android:textAlignment="center"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="25dp"
            android:layout_marginTop="30dp"
            android:layout_marginLeft="10dp"
            android:textStyle="bold"
            android:text=" - Waktunya Kriptografi Teori !"/>

        <TextView
            android:layout_marginTop="100dp"
            android:layout_width="match_parent"
            android:layout_height="25dp"
            android:text="ON GOING SCHEDULE"
            android:textSize="18dp"
            android:textColor="#FFF"
            android:textStyle="bold"
            android:background="#66c3cd"
            android:textAlignment="center"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="25dp"
            android:layout_marginTop="130dp"
            android:layout_marginLeft="10dp"
            android:textStyle="bold"
            android:text=" - Kriptografi Praktikum (LAB F | 13.30 - 14.30)"/>

    </RelativeLayout>

    <View
        android:id="@+id/divider"
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:background="?android:attr/listDivider" />

    <android.support.design.widget.TabLayout
        android:layout_width="match_parent"
        android:layout_height="42dp"
        app:tabIndicatorColor="@color/colorPrimaryDark"
        app:tabIndicatorGravity="top"
        app:tabIndicatorHeight="3dp"
        app:tabTextColor="#FFF"
        android:background="#66CDAA">

        <android.support.design.widget.TabItem
            android:layout_width="wrap_content"
            android:layout_height="10dp"
            android:text="Beranda" />

        <android.support.design.widget.TabItem
            android:layout_width="wrap_content"
            android:layout_height="10dp"
            android:text="IPK" />

        <android.support.design.widget.TabItem
            android:layout_width="wrap_content"
            android:layout_height="10dp"
            android:text="Log Out" />
    </android.support.design.widget.TabLayout>


</LinearLayout>