<?xml version="1.0" encoding="utf-8"?>

<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_pressed="true" >

        <shape>
            <solid
            android:color="#66CDAA" />

            <stroke
            android:width="1dp"
            android:color="#66CDAA" />

            <corners
            android:radius="50dp" />

            <padding
            android:left="10dp"
            android:top="10dp"
            android:right="10dp"
            android:bottom="10dp" />
        </shape>
    </item>

    <item>
        <shape>
            <gradient
            android:startColor="#66CDAA"
            android:endColor="#66CDAA"
            android:angle="270" />

            <stroke
            android:width="1dp"
            android:color="#66CDAA" />

            <corners
            android:radius="40dp" />

            <padding
            android:left="10dp"
            android:top="10dp"
            android:right="10dp"
            android:bottom="10dp" />
        </shape>
    </item>
</selector>